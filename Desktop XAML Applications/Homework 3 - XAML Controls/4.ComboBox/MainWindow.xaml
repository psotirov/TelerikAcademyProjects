<Window x:Class="_4.ComboBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Label>Please select an item</Label>
        <ComboBox Name="cbSelector" SelectionChanged="cbSelector_Selected">
            <ComboBoxItem>
                <TextBlock>This is a Text Block item</TextBlock>
            </ComboBoxItem>
            <ComboBoxItem>
                <Ellipse Width="80" Height="30" Fill="Green"></Ellipse>
            </ComboBoxItem>
            <ComboBoxItem>
                <Image Source="flag_UK.jpg"></Image>
            </ComboBoxItem>
        </ComboBox>
        <TextBlock Margin="20" Name="tbSelection">No selection</TextBlock>
    </StackPanel>
</Window>
