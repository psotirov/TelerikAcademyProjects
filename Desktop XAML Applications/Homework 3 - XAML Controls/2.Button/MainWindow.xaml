<Window x:Class="_2.Button.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Margin="50" Name="lblClicker" Target="{Binding ElementName=btnClicker}">Button not clicked</Label>
        <Button Margin="50" Grid.Column="1" Name="btnClicker" Click="btnClicker_Click">Click me!</Button>
    </Grid>
</Window>
