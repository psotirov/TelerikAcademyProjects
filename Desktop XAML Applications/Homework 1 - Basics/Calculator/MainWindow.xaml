                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="5" Grid.Column="0" Margin="0,0,5,5" Content="1">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,5" StartPoint="0,0">
                        <GradientStop Color="#edf5fb" Offset="1"/>
                        <GradientStop Color="#f7fbff"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="5" Grid.Column="1" Margin="0,0,5,5" Content="2">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,5" StartPoint="0,0">
                        <GradientStop Color="#edf5fb" Offset="1"/>
                        <GradientStop Color="#f7fbff"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="5" Grid.Column="2" Margin="0,0,5,5" Content="3">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,5" StartPoint="0,0">
                        <GradientStop Color="#edf5fb" Offset="1"/>
                        <GradientStop Color="#f7fbff"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="5" Grid.Column="3" Margin="0,0,5,5" Content="-">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#d6e1ef" Offset="0.5"/>
                        <GradientStop Color="#f0f6fb"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="5" Grid.Column="4" Margin="0,0,5,5" Grid.RowSpan="2" Content="=" FontSize="18">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#d6e1ef" Offset="0.5"/>
                        <GradientStop Color="#f0f6fb"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="6" Grid.Column="0" Margin="0,0,5,5" Grid.ColumnSpan="2" Content="0">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,5" StartPoint="0,0">
                        <GradientStop Color="#edf5fb" Offset="1"/>
                        <GradientStop Color="#f7fbff"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="6" Grid.Column="2" Margin="0,0,5,5" Content=".">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,5" StartPoint="0,0">
                        <GradientStop Color="#edf5fb" Offset="1"/>
                        <GradientStop Color="#f7fbff"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Grid.Row="6" Grid.Column="3" Margin="0,0,5,5" Content="+">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#d6e1ef" Offset="0.5"/>
                        <GradientStop Color="#f0f6fb"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Window>
